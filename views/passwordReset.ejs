<div id="resettop">
    <a href="/home" id="bab" style="float: right;">
        <i class="fa fa-sign-in-alt" aria-hidden="true" style="color: #0262d6 ;background-color: white ;padding-top: 5px;padding-bottom: 5px;padding-right: 5px;padding-left: 5px;"></i></a>
        <h3 id="foru"> RESET PASSWORD</h3>
</div>
<div id="" style="padding-top: 3.9%;">


    <div class="wrapper" id='frm' style="border-radius: 5%;">
        <form action="/passwordReset/<%= time %>/<%= id %>" method="POST">
            <h1 style="text-align: center; color:#0262d6 ;">
                Password
        </h1>
            <% if(message=='Password successfully changed!'){ %>
            <div class="text-center inputfield terms" style="color: green;">
                <p></p><%= message %>
            </div>
            <% }else{ %>
            <div class="text-center inputfield terms" style="color: red;">
                <p></p><%= message %>
            </div>
            <% } %>
            <% if(message!='Password successfully changed!'){ %>
            <div class="form">

                <div class="inputfield">
                    <label>Password</label>
                    <input type="password" class="input" name="password" required='required'>
                </div>
                <div class="inputfield">
                    <label>Confirm Password</label>
                    <input type="password" class="input" name="confirm_password" required='required'>
                </div>
                <div class="inputfield">
                    <input type="submit" value="Reset Password" class="btn">
                </div>
            </div>
            <% } %>
        </form>

    </div>
</div>


