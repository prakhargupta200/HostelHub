<!DOCTYPE html>
<html>

    <head>
        <title>Laundry History</title>
        <meta name="description" content="This is the description">
    
        <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' />
        <link rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css' />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
      <link rel="stylesheet" href="/css/homestyle.css">
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC&family=Teko&display=swap&family=Merriweather:ital,wght@1,700&display=swap" rel="stylesheet"> 
        <link rel="stylesheet" href="/css/homestyle.css">
        <link rel="stylesheet" href="/css/logsignin.css">
        <link rel='stylesheet' type='text/css' href='/css/head.css'>
        <script src="https://kit.fontawesome.com/a076d05399.js"></script>
        <link rel="stylesheet" href="/css/animate.css">
        <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&family=Sansita+Swashed&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/styleslaun.css" />
        <script src="/store.js" defer></script>
    
    </head>

<body>
    <div id="toplaun">
      
        <a href="/laundry">
            <i class="fa fa-arrow-circle-left" aria-hidden="true" id="backlaun"></i></a>
        </div>
    <section class="container content-section">
        <h2 class="section-header">HISTORY</h2>
        <div class="cart-row">
            <span class="cart-item cart-header cart-column">ITEM</span>
            <span class="cart-quantity cart-header cart-column">QUANTITY</span>
            <span class="cart-button cart-header cart-column"></span>
        </div>
        <% cart.forEach(function(cart){ %>
        <% let amount = (cart.qty1==null?Number(0):Number((cart.qty1)*20)) + (cart.qty2==null?Number(0):Number((cart.qty2)*10)) + (cart.qty3==null?Number(0):Number((cart.qty3)*30)) %>
        <div class="cart-row">
            <div class="cart-item cart-column">
                <span class="cart-item-title">Jeans</span>
            </div>
            <div class="cart-quantity cart-column">
                <span class="cart-quantity-input"><%= cart.qty1==null?'0':cart.qty1 %></span>
            </div>
        </div>
        <div class="cart-row">
            <div class="cart-item cart-column">
                <span class="cart-item-title">Shirt/T-Shirt</span>
            </div>
            <div class="cart-quantity cart-column">
                <span class="cart-quantity-input"><%= cart.qty2==null?'0':cart.qty2 %></span>
            </div>
        </div>
        <div class="cart-row">
            <div class="cart-item cart-column">
                <span class="cart-item-title">Jacket</span>
            </div>
            <div class="cart-quantity cart-column">
                <span class="cart-quantity-input"><%= cart.qty3==null?'0':cart.qty3 %></span>
            </div>
        </div>

        <div class="cart-row">
            <div class="cart-item cart-col">
                <button onclick="window.location.href='/laundry/<%= cart._id %>/edit'"
                    class="btn btn-edit">Edit</button>
            </div>
            <div class="cart-quantity cart-col">
                <form action="/laundry/<%=cart._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-delete">Delete</button>
                </form>
            </div>
        </div>

        <div class="cart-total">
            <strong class="cart-total-title">Total</strong>
            <span class="cart-total-price"><%= amount %></span>
        </div>
        <div class="cart-total">
            <strong class="cart-total-title">Added</strong>
            <span class="cart-total-price"><%= cart.created.toDateString() %></span>
        </div>
        <% }) %>
    </section>
</body>

</html>