    <div style="padding-top: 3.9%;">
        <div class="container-xl">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-5">
                                <h2>MessComplaint <b>List</b></h2>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                        <form action="/adminhostelnomess" method="POST">
                            <div class="row">
                                <div class="col-xs-6 col-md-4" style="margin-left: 0;">
                                    <div class="input-group">
                                        <input type="text" name="hostelsearch" class="form-control"
                                            placeholder="Search by Hostel no" id="txtSearch" />
                                        <div class="input-group-btn">
                                            <button class="btn btn-primary" type="submit">
                                                <span class="glyphicon glyphicon-search"></span>
                                            </button>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </form>
                        <thead>
                            <% if(members.length>0){ %>
                            <tr>
                                <th>Hostel No</th>
                                <th>Name</th>
                                <th>Roll no</th>
                                <th>Status</th>
                                <th>View complaints</th>
                            </tr>
                        </thead>

                        <tbody>

                            <% for(let i=0;i<members.length;i++){ %>

                            <tr>
                                <td><%= members[i].hostel_no %></td>

                                <td><%= members[i].user %></td>
                                <td><%= members[i].roll_no %></td>
                                <% if(members[i].verify==null){ %>
                                <td style="color: orange;">pending</td>
                                <% }else if(members[i].verify==false){ %>
                                <td style="color: red;">rejected</td>
                                <% }else{ %>
                                <td style="color: green;">verified</td>
                                <% } %>
                                <td><a href="/adminmesscompdetails/<%= members[i]._id %>">
                                        View</a></td>
                            </tr>

                            <% } %>

                        </tbody>
                        <% }else{ %>
                        <tr>
                            <td style="text-align: center;color: red;">No complaints found
                            </td>
                        </tr>
                        <% } %>

                    </table>
                    <div class="clearfix">
                    </div>
                </div>
