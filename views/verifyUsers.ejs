<div  style="padding-top: 8%;">
    <div class="wrapper" id='frm' style="border-radius: 10%;background-color: #ffdc79;">

        <form method="POST">
            <!-- <div class="title">
                Student Details
            </div> -->

            <div class=" form">

                <div class="inputfield">
                    <label style="color: #515b7c;"><strong>Name</strong></label>
                    <input type="text" class="input" name="name" required='required' value="<%= user.name %>" readonly>
                </div>
                <div class="inputfield">
                    <label style="color: #515b7c;"><strong>Hostel No.</strong></label>
                   
                    <input type="text" class="input" name="hostel_no" required='required' value="<%= user.hostel_no %>"
                        readonly>
                </div>
                <div class="inputfield">
                    <label style="color: #515b7c;"><strong>Room No.</strong></label>
                  
                    <input type="text" class="input" name="room_no" required='required' value="<%= user.room_no %>"
                        readonly>
                </div>
                <div class="inputfield">
                    <label style="color: #515b7c;"><strong>Roll No.</strong></label>
                    
                    <input type="text" class="input" name="roll_no" required='required' value="<%= user.roll_no %>"
                        readonly>
                </div>
                <div class="inputfield">
                    <label style="color: #515b7c;"><strong>Email Address</strong></label>
                   
                    <input type="email" class="input" name='username' required='required' value="<%= user.username %>"
                        readonly>
                </div>

                <div class="inputfield">
                    <label style="color: #515b7c;"><strong>Contact Number</strong></label>
                    
                    <input type="tel" class="input" name='phone' required='required'
                        placeholder="with country code ex: +91" value="<%= user.phone %>" readonly>
                </div>
                <div class="inputfield">
                    <label style="color: #515b7c;"><strong>College Id Proof</strong></label>
                    
                    <a href="/uploads/<%= user.image %>" download="CollegeID<%= user.name %>">Download ID</a>
                </div>
                <% if(user.verify==null){ %>
                <div class="inputfield">
                    <input type="submit" value="Verify" class="btn" formaction="/adminDashboard/<%= user._id %>">
                </div>
                <div class="inputfield" style="background-color: red!important;">
                    <input type="submit" value="Reject" class="btn" formaction="/rejected/<%= user._id %>">
                </div>
                <% } %>
                <% if(user.verify==false){ %>
                <div class="inputfield">
                    <input type="submit" value="Verify" class="btn" formaction="/adminDashboard/<%= user._id %>">
                </div>
                <% } %>
            </div>
        </form>
    </div>

</div>



