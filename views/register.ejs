<div id="middler" style="padding-top: 1.4%;">
  <div class="wrapper" id='frm' >

    <form action="/register" method="POST" enctype="multipart/form-data">
      <h2>Register</h2>
      <h1 id="reg1">REGISTER</h1>
      <p class="hint-text" id="hh">Let's make your hostel life more memorable :)</p>
      <% const rang = message === 'Successfully registered, you will be shortly notified about your verification status through your mail'?'hara':'lal' %>
      <% if(rang == 'lal'){ %>
      <div class="text-center inputfield terms" style="color: red;">
        <% if(message === ''){ %>
        <p></p>
        <% } else {%>
        <p></p><%= message %>
        <% } %>

      </div>
      <% }else{ %>
      <div class="text-center inputfield terms" style="color: green;">
        <p></p><%= message %>
      </div>
      <% } %>
      <div class=" form">

        <div class="inputfield">
          <label style="color: #515b7c;"><strong>Full Name</strong></label>
          <input type="text" class="input" name="name" required='required' placeholder="Full Name" value="<%= user==null?'':user.name %>">
        </div>
        <div class="inputfield">
          <label style="color: #515b7c;"><strong>Hostel No.</strong></label>
          <input type="text" class="input" name="hostel_no" required='required' placeholder="Hostel No."
            value="<%= user==null?'':user.hostel_no %>">
        </div>
        <div class="inputfield">
        
          <label style="color: #515b7c;"><strong>Room No.</strong></label>
          <input type="text" class="input" name="room_no" required='required' placeholder="Room No." value="<%= user==null?'':user.room_no %>">
        </div>
        <div class="inputfield">
          <label style="color: #515b7c;"><strong>Roll No.</strong></label>
          <input type="text" class="input" name="roll_no" required='required' placeholder="BRANCH/10XXX/YY" value="<%= user==null?'':user.roll_no %>">
        </div>
        <div class="inputfield">
          <label style="color: #515b7c;"><strong>Email Address</strong></label>

          <input type="email" class="input" name='username' required='required' placeholder="example@domain.com"
            value="<%= user==null?'':user.username%>">
        </div>
        <div class="inputfield">
          <label style="color: #515b7c;"><strong>Password</strong></label>
          <input type="password" class="input" name="password" required='required' placeholder="Password">
        </div>
        <div class="inputfield">
          <label style="color: #515b7c;"><strong>Confirm Password</strong></label>
     
          <input type="password" class="input" name="confirm_password" required='required' placeholder="Confirm Password"> 
        </div>

        <div class="inputfield">
          <label style="color: #515b7c;"><strong>Contact Number</strong></label>
    
          <input type="tel" class="input" name='phone' required='required' placeholder="write 10 digits mobile number"
            value="<%= user==null?'':user.phone %>">
        </div>
        <div class="inputfield">
          <label style="color: #515b7c;"><strong>College ID Proof</strong></label>
          
          <input type="file" class="input" name='file' required='required' style="color: black;border-color:  #566787;">
        </div>
        <div class="inputfield">
          <input type="submit" value="Register" class="btn" id="registerb">
        </div>
      </div>
    </form>

    <div class="text-center inputfield terms" style="color: #454646;">
      <p></p><strong>Already have an account? </strong><a href="/home" style="color: #0C6C11;">Sign
        in</a>
    </div>
