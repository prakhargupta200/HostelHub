    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' />
    <link rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/css/homestyle.css">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC&family=Teko&display=swap&family=Merriweather:ital,wght@1,700&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="/css/homestyle.css">
    <link rel="stylesheet" href="/css/logsignin.css">
    <link rel='stylesheet' type='text/css' href='/css/head.css'>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="/css/animate.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&family=Sansita+Swashed&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styleslaun.css" />
    <script src="/store.js" defer></script>

</head>

<body>
     
       <div id="toplaun">
      
        <a href="/dashboard">
            <i class="fa fa-arrow-circle-left" aria-hidden="true" id="backlaun"></i></a>
        </div>
  
    <section class="container content-section">
        <div class="shop-items">
            <% items.forEach(function(item){ %>
            <div class="shop-item" data-item-id="<%= item.id %>">
                <span class="shop-item-title"><%= item.name %></span>
                <img class="shop-item-image" src="/hostel/<%= item.imgName %>">
                <div class="shop-item-details">
                    <span class="shop-item-price">Rs.<%= item.price / 100 %></span>
                    <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                </div>
            </div>
            <% }) %>
        </div>
    </section>
    <section class="container content-section">
        <h2 class="section-header">CART</h2>
        <div class="cart-row">
            <span class="cart-item cart-header cart-column">ITEM</span>
            <span class="cart-price cart-header cart-column">PRICE</span>
            <span class="cart-quantity cart-header cart-column">QUANTITY</span>
        </div>
        <form action="/laundry" method="POST">
            <div class="cart-items">
            </div>
            <div class="cart-total">
                <strong class="cart-total-title">Total</strong>
                <input type="text" class="cart-total-price" value="0" name="cart[amount]" disabled>
            </div>
            <button class="btn btn-primary btn-purchase">SAVE</button>
        </form>
        <button onclick="window.location.href='/laundry/history'" class="btn btn-history">HISTORY</button>
    </section>
</body>

</html>